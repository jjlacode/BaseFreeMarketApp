<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VisorPDF">

    <Button
        android:id="@+id/btncompartirvisor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boton_redondo_verde"
        android:textColor="@color/Color_texto_titulos"
        android:text="@string/compartir_pdf"/>

    <!--Visor del PDF apartir del Gradle configurado -->
    <com.github.barteksc.pdfviewer.PDFView
        android:id="@+id/pdfVisor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>