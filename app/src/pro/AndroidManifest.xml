<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codevsolution.freemarketsapp">

    <application
        android:name="com.codevsolution.base.android.AppActivity"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_um"
        android:label="FreeMarketsApp Pro"
        android:roundIcon="@mipmap/ic_launcher_um_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.codevsolution.freemarketsapp.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name="com.codevsolution.freemarketsapp.settings.SettingsActivityPro" />

        <receiver
            android:enabled="false"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED"
            android:name="com.codevsolution.freemarketsapp.services.AutoArranquePro">

            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <receiver android:name="com.codevsolution.freemarketsapp.services.EventosReceiver">
            <intent-filter>
                <action android:name="com.jjlacode.freelanceproject.action.AVISOEVENTO" />
                <action android:name="com.jjlacode.freelanceproject.action.POSPONER" />
                <action android:name="com.jjlacode.freelanceproject.action.CANCELAR" />
            </intent-filter>
        </receiver>

        <receiver android:name="com.codevsolution.freemarketsapp.services.SorteosReceiver">
            <intent-filter>
                <action android:name="com.jjlacode.freelanceproject.action.AVISOSORTEO" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.codevsolution.freemarketsapp.services.Jobs"
            android:permission="android.permission.BIND_JOB_SERVICE" />


    </application>

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

</manifest>