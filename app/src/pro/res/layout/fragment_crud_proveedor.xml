<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:jjla="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frcli"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.FragmentCRUDProveedor">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add_proveedor_producto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_producto"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/boton_redondo_primary" />



        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/chactivoproveedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/inactivo" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btneventoproveedor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/boton_redondo_secondary"
                android:src="@drawable/ic_evento_indigo" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnvereventoproveedor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/boton_redondo_secondary"
                android:src="@drawable/ic_lista_eventos_indigo" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_crearnota_proveedor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/boton_redondo_secondary"
                android:src="@drawable/ic_nueva_nota_indigo" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_vernotas_proveedor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/boton_redondo_secondary"
                android:src="@drawable/ic_lista_notas_indigo" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>

