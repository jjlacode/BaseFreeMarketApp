<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ClientesWeb">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgformbase"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2.5"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_add_a_photo_black_24dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.jjlacode.base.util.android.controls.EditMaterial
                    android:id="@+id/etnombreformbase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:activo="false"
                    app:hint_text="@string/nombre"
                    app:tipo_dato="TEXTO|PERSONA" />

                <com.jjlacode.base.util.android.controls.EditMaterial
                    android:id="@+id/ettelefonoformbase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hint_text="@string/telefono"
                    app:activo="false"
                    app:tipo_dato="NUMERO|TELEFONO" />

                <com.jjlacode.base.util.android.controls.EditMaterial
                    android:id="@+id/etemailformbase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hint_text="@string/email"
                    app:activo="false"
                    app:tipo_dato="TEXTO|EMAIL" />

            </LinearLayout>
        </LinearLayout>

        <com.jjlacode.base.util.android.controls.EditMaterial
            android:id="@+id/etdireccionformbase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:activo="false"
            app:hint_text="@string/direccion"
            app:tipo_dato="TEXTO|DIRECCION|MULTI" />

        <com.jjlacode.base.util.android.controls.EditMaterial
            android:id="@+id/etdescformbase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint_text="@string/descripcion"
            app:activo="false"
            app:tipo_dato="TEXTO|MULTI" />
    </LinearLayout>
</ScrollView>