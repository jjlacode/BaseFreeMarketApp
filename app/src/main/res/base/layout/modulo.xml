<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contenedor_mod"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:nestedScrollingEnabled="true">

    <Chronometer
        android:id="@+id/chronocrud_mod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/layout_cabecera_mod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/layout_cuerpo_mod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_rv_mod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp" />

        <com.codevsolution.base.animation.OneFrameLayout
            android:id="@+id/frameanimationcuerpo_mod"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary">

            <com.codevsolution.base.android.controls.LockableScrollView
                android:id="@+id/scrolldetalle_mod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/ly_bloque_detalle_mod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layout_extras_antes_detalle_mod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:orientation="vertical"
                        android:paddingStart="5dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="5dp"
                        android:paddingBottom="5dp" />

                    <LinearLayout
                        android:id="@+id/layout_detalle_mod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:orientation="vertical"
                        android:paddingStart="5dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="5dp"
                        android:paddingBottom="5dp" />

                    <androidx.core.widget.NestedScrollView
                        android:id="@+id/ly_nested_mod"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="top" />

                    <LinearLayout
                        android:id="@+id/layout_extras_post_detalle_mod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:orientation="vertical"
                        android:paddingStart="5dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="5dp"
                        android:paddingBottom="5dp" />

                    <LinearLayout
                        android:id="@+id/layout_web_detalle_mod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:orientation="vertical"
                        android:paddingStart="5dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="5dp"
                        android:paddingBottom="5dp" />

                </LinearLayout>
            </com.codevsolution.base.android.controls.LockableScrollView>
        </com.codevsolution.base.animation.OneFrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_pie_mod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/layout_publi_mod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:minHeight="@dimen/altobtn"
        android:paddingStart="35dp"
        android:paddingEnd="35dp" />

</androidx.appcompat.widget.LinearLayoutCompat>