<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/imgmaterial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="@dimen/altobtnico"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:src="@drawable/ic_rec_indigo"
            android:background="@drawable/boton_redondo_secondary"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ti_material"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
        app:boxBackgroundColor="@color/colorPrimary"
        app:hintTextAppearance="@style/Hint"
        app:counterTextAppearance="@style/Counter"
        app:counterOverflowTextAppearance="@style/CounterOverFlow"
        app:errorTextAppearance="@style/Error">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_material"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textCursorDrawable="@drawable/cursor_secondary_dark"
            android:shadowColor="@color/colorSecondary"
            android:textSize="@dimen/texto"/>

    </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/imgmaterialder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="@dimen/altobtnico"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:src="@drawable/ic_ayuda_indigo"
            android:background="@drawable/boton_redondo_secondary" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/imgmaterialder2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="@dimen/altobtnico"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:visibility="gone"
            android:src="@drawable/ic_ayuda_indigo"
            android:background="@drawable/boton_redondo_blanco" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/imgmaterialder3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="@dimen/altobtn"
            android:layout_gravity="top"
            android:visibility="gone"
            android:text="@string/ayuda"
            android:background="@drawable/boton_redondo_secondary" />


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>