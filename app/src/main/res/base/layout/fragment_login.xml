<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <!-- Logo -->
        <com.codevsolution.base.android.controls.ImagenLayout
            android:id="@+id/imglogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:layout_weight="1" />

        <!-- Indicador de progreso -->
        <ProgressBar
            android:id="@+id/login_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_weight="2"
            android:progressBackgroundTint="@color/colorPrimary"
            android:visibility="gone" />

        <!-- Formulario de login -->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/login_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            android:visibility="gone">

            <com.codevsolution.base.android.controls.EditMaterial
                android:id="@+id/etcorreologin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/altobtn"
                app:gravedad="centro"
                app:hint_text="@string/email"
                app:tipo_dato="TEXTO|EMAIL" />

            <com.codevsolution.base.android.controls.EditMaterial
                android:id="@+id/etpasslogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/altobtn"
                android:gravity="center_horizontal|center_vertical"
                app:hint_text="@string/pass"
                app:tipo_dato="TEXTO|PASS" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnacceder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/altobtn"
                android:background="@drawable/boton_redondo_secondary"
                android:text="@string/acceder"
                android:textColor="@color/colorSecondaryDark" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRegistrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/altobtn"
                android:background="@drawable/boton_redondo_secondary"
                android:text="@string/registrar"
                android:textColor="@color/Color_texto"
                android:visibility="gone" />


        </androidx.appcompat.widget.LinearLayoutCompat>
    </LinearLayout>
</ScrollView>