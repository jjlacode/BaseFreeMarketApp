<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <padding
                android:left="5dp"
                android:right="5dp"
                />

            <gradient android:startColor="#00c4c7a9" android:endColor="#00d6dadf" android:angle="270" />

            <stroke android:width="5px" android:color="@color/colorAccent" />
            <solid android:color="@color/Color_fonfo_edit"/>
            <corners android:radius="5dp" />
        </shape>
    </item>

    <item android:state_focused="false">
        <shape android:shape="rectangle">
            <padding
                android:left="5dp"
                android:right="5dp"
                />

            <gradient android:startColor="#00c4c7a9" android:endColor="#00d6dadf" android:angle="270" />
            <solid android:color="@color/Color_fonfo_edit"/>
            <stroke  android:width="0px" android:color="@color/colorPrimary" />
            <corners android:radius="5dp" />

        </shape>
    </item>


</selector>