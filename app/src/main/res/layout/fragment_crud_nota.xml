<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/sptiponota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog" />


        <TextView
            android:id="@+id/tvtiponota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tipo_nota"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvfechanota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etdesc_nota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/descripcion"
            android:inputType="textMultiLine" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_grabar_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/boton_redondo_primary"
                android:text="@string/grabar_video"
                android:textColor="@color/Color_texto_titulos" />

            <Button
                android:id="@+id/btn_play_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/boton_redondo_primary"
                android:text="@string/play_video"
                android:textColor="@color/Color_texto_titulos" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvaudio"
            android:gravity="center"
            android:textSize="@dimen/texto"
            android:textColor="@color/Color_texto_titulos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_grabar_audio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mic_verde"/>

            <ImageView
                android:id="@+id/btn_grabar_audio_stop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_stop_verde"/>

            <ImageView
                android:id="@+id/btn_play_audio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_play_verde"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_videoview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/imagen_nota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/ic_add_a_photo_black_24dp" />

        <ImageButton
            android:id="@+id/btncompartirnota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_redondo_primary"
            android:src="@drawable/ic_compartir_verde" />

    </LinearLayout>

</ScrollView>