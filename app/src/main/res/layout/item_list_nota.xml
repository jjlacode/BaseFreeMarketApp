<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardBackgroundColor="#ECE6E6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagen_lnota"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvtipo_lnota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tipo_nota"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/texto_not" />

            <TextView
                android:id="@+id/tvdesc_lnota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/titulo"
                android:textStyle="italic"
                android:textSize="@dimen/texto_card" />
            <TextView
                android:id="@+id/tvfechalnota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/texto_card" />


            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>