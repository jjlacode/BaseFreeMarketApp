<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FragmentUDPartidaBase">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgudpartidabase"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ico_calendario_reloj" />

                    <ImageView
                        android:id="@+id/imgretudpartidabase"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/alert_box_v" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/etnomudpartidabase"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/nombre"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/etdescripcionUDpartidabase"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="@string/descripcion_tipo_cliente"
                        android:inputType="textMultiLine"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ltiempoUDpartidabase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/horas" />

                <TextView
                    android:id="@+id/lcantidadUDpartidabase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/cantidad" />

                <TextView
                    android:id="@+id/lprecioUDpartidabase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/importe" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ettiempoUDpartidabase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/tiempo"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/etcantidadUDpartidabase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/cantidad"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/etprecioUDpartidabase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/importe"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etcompletadaUDpartidabase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="right"
                    android:hint="@string/completada"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/lcompletadaUDpartidabase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="@string/completada" />

            </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressBarUDpartidabase"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnsaveUDpartidabase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/boton_redondo_verde"
                    android:textColor="@color/Color_texto_titulos"
                    android:text="@string/guardar" />

                <Button
                    android:id="@+id/btndelUDpartidabase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/boton_redondo_verde"
                    android:textColor="@color/Color_texto_titulos"
                    android:text="@string/borrar" />

                <Button
                    android:id="@+id/btnvolverUDpartidabase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/boton_redondo_verde"
                    android:textColor="@color/Color_texto_titulos"
                    android:text="@string/volver" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btntareaudpartidabase"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/boton_redondo_verde"
                    android:textColor="@color/Color_texto_titulos"
                    android:text="@string/nueva_tarea" />

                <Button
                    android:id="@+id/btnprodudpartidabase"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/boton_redondo_verde"
                    android:textColor="@color/Color_texto_titulos"
                    android:text="@string/nuevo_producto" />

                <Button
                    android:id="@+id/btnprovudpartidabase"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/boton_redondo_verde"
                    android:textColor="@color/Color_texto_titulos"
                    android:text="@string/nuevo_producto_proveedor" />

                <Button
                    android:id="@+id/btnpartudpartidabase"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/boton_redondo_verde"
                    android:textColor="@color/Color_texto_titulos"
                    android:text="@string/nuevo_producto_proveedor" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvdetalleUDpartidabase"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


        </LinearLayout>
    </ScrollView>

</FrameLayout>