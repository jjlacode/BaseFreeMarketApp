<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FragmentUDPartidaProyecto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ldescipcionUDpartida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/descripcion_tipo_cliente" />

                <EditText
                    android:id="@+id/etdescripcionUDpartida"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:ems="10"
                    android:hint="@string/descripcion_tipo_cliente"
                    android:inputType="textMultiLine" />

                <TextView
                    android:id="@+id/ltiempoUDpartida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tiempo" />

                <EditText
                    android:id="@+id/ettiempoUDpartida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/tiempo"
                    android:inputType="numberDecimal" />

                <TextView
                    android:id="@+id/lcantidadUDpartida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cantidad" />

                <EditText
                    android:id="@+id/etcantidadUDpartida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/cantidad"
                    android:inputType="numberDecimal" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lcompletadaUDpartida"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/completada" />

                    <EditText
                        android:id="@+id/etcompletadaUDpartida"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/completada"
                        android:inputType="number" />

                    <ImageView
                        android:id="@+id/imgUDpartida"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/cliente" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressBarUDpartida"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnsaveUDpartida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/guardar" />

                <Button
                    android:id="@+id/btndelUDpartida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/borrar" />

                <Button
                    android:id="@+id/btnvolverUDpartida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/volver" />

                <Button
                    android:id="@+id/btnnuevatareaUDpartida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/guardar_nueva_tarea" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvtareasUDpartida"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>