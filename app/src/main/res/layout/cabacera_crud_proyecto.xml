<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/colorPrimary">

    <Button
        android:id="@+id/btnpresuplpry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        style="?attr/buttonBarButtonStyle"
        android:background="@color/colorPrimary"
        android:textColor="@color/Color_texto_titulos"
        android:textSize="12sp"
        android:textStyle="bold"
        android:text="@string/presupuestos"/>

    <Button
        android:id="@+id/btnproyectoslpry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="?attr/buttonBarButtonStyle"
        android:background="@color/colorPrimary"
        android:textColor="@color/Color_texto_titulos"
        android:textSize="12sp"
        android:textStyle="bold"
        android:text="@string/proyectos"/>

    <Button
        android:id="@+id/btnproycobroslpry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="?attr/buttonBarButtonStyle"
        android:background="@color/colorPrimary"
        android:textColor="@color/Color_texto_titulos"
        android:textSize="12sp"
        android:textStyle="bold"
        android:text="@string/cobros"/>

    <Button
        android:id="@+id/btnhistoricopry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="?attr/buttonBarButtonStyle"
        android:background="@color/colorPrimary"
        android:textColor="@color/Color_texto_titulos"
        android:textSize="12sp"
        android:textStyle="bold"
        android:text="@string/historico"/>

</LinearLayout>