<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardlevento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardBackgroundColor="#ECE6E6">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linearimgagenda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/imglevento"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:adjustViewBounds="true"
                        card_view:srcCompat="@drawable/ico_calendario_reloj" />

                    <TextView
                        android:id="@+id/tvcompporcevento"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:text="@string/completada"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/cBoxcompletlevento"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:text="@string/completa" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvtipolevento"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/tipo_evento"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/imgexpandirevento"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            card_view:srcCompat="@android:drawable/ic_input_add" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvdesclevento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:text="@string/descripcion_tipo_cliente" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvfinilevento"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/fecha_inicio" />

                        <TextView
                            android:id="@+id/tvhinilevento"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/hora_inicio" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvffinlevento"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/fecha_fin" />

                        <TextView
                            android:id="@+id/tvhfinlevento"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/hora_fin" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvtelefonoevento"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="@string/telefono"
                            android:textSize="24sp" />

                        <ImageButton
                            android:id="@+id/imgbtnllamadaevento"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            card_view:srcCompat="@drawable/ic_phone_in_talk_black_24dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvlugarevento"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="fill_vertical"
                            android:layout_weight="1"
                            android:text="@string/lugar_cita" />

                        <ImageButton
                            android:id="@+id/imgbtnmapaevento"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            card_view:srcCompat="@drawable/ic_place_black_24dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/tvemaillevento"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="@string/email"
                            android:textSize="18sp" />

                        <ImageButton
                            android:id="@+id/imgbtnemaillevento"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            card_view:srcCompat="@drawable/ic_mail_outline_black_24dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvnomclirelevento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/cliente_relacionado" />

                    <TextView
                        android:id="@+id/tvnompryrellevento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/proyecto_relacionado" />


                </LinearLayout>

            </LinearLayout>

            <ProgressBar
                android:id="@+id/pbarevento"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btneditevento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_redondo_verde"
                android:textColor="@color/Color_texto_titulos"
                android:text="@string/editar_evento" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    </RelativeLayout>

