<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.Freelancers">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgdetfreelance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2.5"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_add_a_photo_black_24dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <jjlacode.com.freelanceproject.util.android.controls.EditMaterial
                    android:id="@+id/etnombredetfreelance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:activo="false"
                    app:hint_text="@string/nombre"
                    app:tipo_dato="TEXTO|PERSONA" />

                <jjlacode.com.freelanceproject.util.android.controls.EditMaterial
                    android:id="@+id/etdirecciondetfreelance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:activo="false"
                    app:hint_text="@string/direccion"
                    app:tipo_dato="TEXTO|DIRECCION|MULTI" />

                <jjlacode.com.freelanceproject.util.android.controls.EditMaterial
                    android:id="@+id/etdescdetfreelance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hint_text="@string/descripcion"
                    app:activo="false"
                    app:tipo_dato="TEXTO|MULTI" />

                <jjlacode.com.freelanceproject.util.android.controls.EditMaterial
                    android:id="@+id/ettelefonodetfreelance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hint_text="@string/telefono"
                    app:activo="false"
                    app:tipo_dato="NUMERO|TELEFONO" />

                <jjlacode.com.freelanceproject.util.android.controls.EditMaterial
                    android:id="@+id/etemaildetfreelance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hint_text="@string/email"
                    app:activo="false"
                    app:tipo_dato="TEXTO|EMAIL" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>