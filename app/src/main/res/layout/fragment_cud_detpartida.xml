<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    tools:context=".ui.FragmentCUDDetpartida">



    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical">

        <Chronometer android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chronodetpartida"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/tvtipocdetpartida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tipo_detpartida"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgcdetpartida"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2.5"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_add_a_photo_black_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_autocatdetpartida"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                <AutoCompleteTextView
                    android:id="@+id/autocat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/cuadro_texto"
                    android:hint="@string/categoria"/>
                <ImageView
                    android:id="@+id/autocatsearch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:src="@drawable/ic_search_black_24dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_autoprovdetpartida"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                <AutoCompleteTextView
                    android:id="@+id/autoprov"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cuadro_texto"
                    android:layout_weight="1"
                    android:hint="@string/proveedor"/>
                    <ImageView
                        android:id="@+id/autoprovsearch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:src="@drawable/ic_search_black_24dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_autonomdetpartida"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                <AutoCompleteTextView
                    android:id="@+id/autonomdetpartida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/cuadro_texto"
                    android:hint="@string/nombre" />
                <ImageView
                    android:id="@+id/autonomdetpartsearch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:src="@drawable/ic_search_black_24dp" />
            </LinearLayout>

                <jjlacode.com.freelanceproject.util.android.controls.EditMaterial
                    android:id="@+id/etnombredetpartida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hint_text="@string/nombre" />

                <jjlacode.com.freelanceproject.util.android.controls.EditMaterial
                    android:id="@+id/tvrefprovcdetpartida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hint_text="@string/referencia_proveedor" />

                <jjlacode.com.freelanceproject.util.android.controls.EditMaterial
                    android:id="@+id/etdesccdetpartida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hint_text="@string/descripcion"
                    app:tipo_dato="TEXTO|MULTI" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <jjlacode.com.freelanceproject.util.android.controls.EditMaterial
                android:id="@+id/ettiempocdetpartida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:hint_text="@string/tiempo"
                app:gravedad="centro"
                app:tipo_dato="NUMERO|DECIMAL"/>

            <jjlacode.com.freelanceproject.util.android.controls.EditMaterial
                android:id="@+id/etpreciocdetpartida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:hint_text="@string/importe"
                app:tipo_dato="NUMERO|DECIMAL"/>

            <jjlacode.com.freelanceproject.util.android.controls.EditMaterial
                android:id="@+id/etcantcdetpartida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:hint_text="@string/cantidad"
                app:tipo_dato="NUMERO|DECIMAL" />
            <jjlacode.com.freelanceproject.util.android.controls.EditMaterial
                android:id="@+id/etcanttotpartida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:hint_text="@string/cantidad_partida"
                app:tipo_dato="NUMERO|DECIMAL" />

            <jjlacode.com.freelanceproject.util.android.controls.EditMaterial
                android:id="@+id/etporcdesprovcdetpartida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:hint_text="@string/descuento_proveedor"
                app:tipo_dato="NUMERO|DECIMAL" />

        </LinearLayout>

            <TextView
                android:id="@+id/tvtiempototaldetpartida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/texto"
                android:gravity="center"/>


            <jjlacode.com.freelanceproject.util.android.controls.EditMaterial
                android:id="@+id/etcompletadadetpartida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:gravedad="centro"
                app:hint_text="@string/completada"
                app:tipo_dato="NUMERO" />

        <ProgressBar
            android:id="@+id/progressBardetpartida"
            style="@android:style/Widget.Holo.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/bar_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/progressBar2detpartida"
            style="@android:style/Widget.Holo.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/bar_notok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvtrek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/contador"
            android:gravity="center"
            android:text="@string/trek"/>

        <Button
            android:id="@+id/btn_trek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_redondo_primary"
            android:textColor="@color/Color_texto_titulos"
            android:text="@string/inicio_trek"/>

        <Button
            android:id="@+id/btn_trek_pausa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_redondo_primary"
            android:textColor="@color/Color_texto_titulos"
            android:text="@string/pausa_trek"/>

        <Button
            android:id="@+id/btn_trek_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_redondo_primary"
            android:textColor="@color/colorAccent"
            android:text="@string/reset_trek"/>

        <CheckBox
            android:id="@+id/cbox_hacer_detpartida_completa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/texto"
            android:text="@string/partida_completada"
            android:layout_gravity="center"
            android:checked="false"/>

        <Button
            android:id="@+id/btnntareacdetpartida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_redondo_primary"
            android:textColor="@color/Color_texto_titulos"
            android:text="@string/guardar_nueva_tarea" />

        <Button
            android:id="@+id/btnnprodcdetpartida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_redondo_primary"
            android:textColor="@color/Color_texto_titulos"
            android:text="@string/guardar_nuevo_producto" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvcdetpartida"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>