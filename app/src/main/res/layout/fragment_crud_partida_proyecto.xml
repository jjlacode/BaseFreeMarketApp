<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FragmentCRUDPartidaProyecto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgudpartida"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_add_a_photo_black_24dp" />

                    <ImageView
                        android:id="@+id/imgretudpartida"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/alert_box_v" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <AutoCompleteTextView
                            android:id="@+id/autonomudpartida"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="@string/clonarpartida"
                            android:textSize="@dimen/texto"/>

                    <ImageView
                        android:id="@+id/imgbuscarpartida"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:src="@drawable/ic_search_black_24dp"/>

                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/cbox_npartidabase"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/texto"
                        android:text="@string/nueva_partidabase"
                        android:checked="true"/>


                    <EditText
                        android:id="@+id/etnomudpartida"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/nombre"
                        android:textSize="@dimen/texto"/>

                    <EditText
                        android:id="@+id/etdescripcionUDpartida"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/descripcion_tipo_cliente"
                        android:inputType="textMultiLine"
                        android:textSize="@dimen/texto"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ltiempoUDpartida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/texto"
                    android:text="@string/horas" />

                <TextView
                    android:id="@+id/lcantidadUDpartida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/texto"
                    android:text="@string/cantidad" />

                <TextView
                    android:id="@+id/lprecioUDpartida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/texto"
                    android:text="@string/importe" />

                <TextView
                    android:id="@+id/lcompletadaUDpartida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/texto"
                    android:gravity="center"
                    android:text="@string/completada" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ettiempoUDpartida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:textSize="@dimen/texto"
                    android:hint="@string/tiempo"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/etcantidadUDpartida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:textSize="@dimen/texto"
                    android:hint="@string/cantidad"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/etprecioUDpartida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:textSize="@dimen/texto"
                    android:hint="@string/importe"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/etcompletadaUDpartida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:textSize="@dimen/texto"
                    android:gravity="end"
                    android:hint="@string/completada"
                    android:inputType="number" />
            </LinearLayout>


                <ProgressBar
                    android:id="@+id/progressBarUDpartida"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btntareaudpartida"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/boton_redondo_primary"
                    android:textColor="@color/Color_texto_titulos"
                    android:text="@string/nueva_tarea" />

                <Button
                    android:id="@+id/btnprodudpartida"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/boton_redondo_primary"
                    android:textColor="@color/Color_texto_titulos"
                    android:text="@string/nuevo_producto" />

                <Button
                    android:id="@+id/btnprovudpartida"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/boton_redondo_primary"
                    android:textColor="@color/Color_texto_titulos"
                    android:text="@string/nuevo_producto_proveedor" />

                <Button
                    android:id="@+id/btnpartudpartida"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/boton_redondo_primary"
                    android:textColor="@color/Color_texto_titulos"
                    android:text="@string/nueva_partida" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvdetalleUDpartida"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</FrameLayout>