<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/imgllamadanot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_phone_in_talk_black_24dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvdescnot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:text="@string/descripcion_tipo_cliente" />

                    <TextView
                        android:id="@+id/tvtelefononot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/telefono"/>


                </LinearLayout>

            </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnvernotllamada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_redondo_secondary"
            android:textColor="@color/Color_texto_titulos"
            android:layout_weight="1"
            android:text="@string/ver" />

        <Button
            android:id="@+id/btnposponernotllamada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_redondo_primary"
            android:textColor="@color/colorPrimary"
            android:layout_weight="1"
            android:text="@string/posponer" />

        <Button
            android:id="@+id/btndescartarrnotllamada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_redondo_secondary"
            android:textColor="@color/Color_texto_titulos"
            android:layout_weight="1"
            android:text="@string/completa" />
    </LinearLayout>

    </LinearLayout>

