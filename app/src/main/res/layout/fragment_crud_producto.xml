<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



            <ImageView
                android:id="@+id/img_crud_productos"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


            <EditText
                android:id="@+id/etnombre_crud_productos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cuadro_texto"
                android:inputType="text"
                android:textSize="@dimen/texto"
                android:textColor="@color/Color_texto"
                android:hint="@string/nombre" />

    </android.support.design.widget.TextInputLayout>

            <EditText
                android:id="@+id/etdescripcionlproductos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:hint="@string/descripcion"
                android:inputType="textMultiLine|text"
                android:textColor="@color/Color_texto"
                android:textSize="@dimen/texto" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etimporte_crud_productos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:background="@drawable/cuadro_texto"
                    android:textColor="@color/Color_texto"
                    android:hint="@string/importe"
                    android:textSize="@dimen/texto" />

                <TextView
                    android:id="@+id/limporte_crud_productos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/importe" />

            </LinearLayout>
</LinearLayout>
