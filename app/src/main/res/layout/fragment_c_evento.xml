<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FragmentCEvento">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/sptiponevento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgnevento"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="3"
                card_view:srcCompat="@drawable/ico_calendario_reloj" />

            <EditText
                android:id="@+id/etdescnevento"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/descripcion_tipo_cliente"
                android:inputType="textPersonName" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/etfechaininevento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="10"
                android:hint="@string/fecha_ini_evento"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/imgbtnfininevento"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="3"
                android:scaleType="fitXY"
                android:src="@drawable/ico_calendario_reloj" />

            <TextView
                android:id="@+id/ethoraininevento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="10"
                android:hint="@string/hora_ini_evento"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/imgbtnhininevento"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="3"
                android:scaleType="fitXY"
                android:src="@drawable/ico_calendario_reloj" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/etfechafinnevento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="10"
                android:hint="@string/fecha_fin_evento"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/imgbtnffinnevento"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="3"
                android:scaleType="fitXY"
                android:src="@drawable/ico_calendario_reloj" />

            <TextView
                android:id="@+id/ethorafinnevento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:ems="10"
                android:hint="@string/hora_fin_evento"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/imgbtnhfinnevento"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="3"
                android:scaleType="fitXY"
                android:src="@drawable/ico_calendario_reloj" />


        </LinearLayout>

        <EditText
            android:id="@+id/ettelefononevento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/telefono"
            android:inputType="phone" />

        <EditText
            android:id="@+id/etlugarnevento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/direccion"
            android:inputType="textPostalAddress" />

        <EditText
            android:id="@+id/etemailnevento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/email"
            android:inputType="textEmailAddress" />

        <CheckBox
            android:id="@+id/chclinevento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/relacionar_cliente" />

        <AutoCompleteTextView
            android:id="@+id/spclinevento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/seleccione_cliente" />

        <CheckBox
            android:id="@+id/chprynevento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/relacionar_proyecto" />

        <AutoCompleteTextView
            android:id="@+id/spprynevento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/seleccione_proyecto" />

        <CheckBox
            android:id="@+id/chavisonevento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/aviso" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ltvavisonevento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/aviso" />

            <EditText
                android:id="@+id/etdiasnevento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/dias"
                android:inputType="number" />

            <EditText
                android:id="@+id/ethorasnevento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/horas"
                android:inputType="number" />

            <EditText
                android:id="@+id/etminutosnevento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/minutos"
                android:inputType="number" />


        </LinearLayout>

        <CheckBox
            android:id="@+id/chrptnevento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/repeticiones" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/ltvreptnevento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:text="@string/repetir_evento" />

            <EditText
                android:id="@+id/etrepaniosnevento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:ems="10"
                android:hint="@string/anios"
                android:inputType="number" />


            <EditText
                android:id="@+id/etrepmesesnevento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:ems="10"
                android:hint="@string/meses"
                android:inputType="number" />

            <EditText
                android:id="@+id/etrepdiasnevento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:ems="10"
                android:hint="@string/dias"
                android:inputType="number" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/ltvdreptnevento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:text="@string/duracion" />

            <EditText
                android:id="@+id/etrepdaniosnevento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:ems="10"
                android:hint="@string/anios"
                android:inputType="number" />

            <EditText
                android:id="@+id/etrepdmesesnevento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:ems="10"
                android:hint="@string/meses"
                android:inputType="number" />

            <EditText
                android:id="@+id/etrepddiasnevento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:ems="10"
                android:hint="@string/dias"
                android:inputType="number" />


        </LinearLayout>


        <Button
            android:id="@+id/btnsavenevento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/guardar" />

        <Button
            android:id="@+id/btnvolvernevento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/volver" />

    </LinearLayout>

</ScrollView>
