            <flag name="PASS" value="128"/>
            <flag name="PERSONA" value="96"/>
            <flag name="URI" value="16"/>
            <flag name="CAPINI" value="16384"/>
            <flag name="CAPPALABRAS" value="8192"/>
            <flag name="CAP" value="4096"/>
            <flag name="AUTO" value="65536"/>
            <flag name="SIGNO" value="4096"/>
            <flag name="NUMEROPASS" value="16"/>
            <flag name="NULO" value="0" />
